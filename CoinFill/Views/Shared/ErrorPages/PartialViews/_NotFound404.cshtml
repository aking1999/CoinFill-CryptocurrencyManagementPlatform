@model CoinFill.PartialViewModels.NotFoundPartialViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="row justify-content-center text-center @Model.HolderClasses">
    <div class="col-sm-10 col-md-8 col-lg-6">
        <div class="card">
            <div class="card-body p-4 p-sm-5">
                <h2 class="display-1 text-300 fs-error mb-4">404</h2>
                <h4 class="mb-3">@Model.Title</h4>
                <hr />
                <p>@Model.Body</p>
                <p>
                    Feel free to reach out to our <a asp-area="" asp-controller="Home" asp-action="CustomerSupport">support team</a>
                    if you have any questions, ideas, or feedback regarding our services here at
                    @Configuration.GetSection("Application:AppName")?.Value. We're here to assist with anything you need!
                </p>
                @if (!Model.HasSecondaryButton)
                {
                    <a href="@Model.PrimaryButtonUrl" class="@Model.PrimaryButtonClasses">
                        @Html.Raw(Model.PrimaryButtonText)
                    </a>
                }
                else
                {
                    <div class="row">
                        <div class="col-6">
                            <a href="@Model.PrimaryButtonUrl" class="@Model.PrimaryButtonClasses">
                                @Html.Raw(Model.PrimaryButtonText)
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Model.SecondaryButtonUrl" class="@Model.SecondaryButtonClasses">
                                @Html.Raw(Model.SecondaryButtonText)
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>