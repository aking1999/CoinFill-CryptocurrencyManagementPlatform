@model List<CoinFill.Helpers.Models.Currency>

<div class="row">
    @foreach (var currency in Model)
    {
        <div class="col-4 col-md-3 col-lg-2">
            <div class="media align-items-center pb-1 mb-3">
                <div class="avatar avatar-2xl">
                    <img class="rounded-circle img-thumbnail p-2 border-0 d-inline-block"
                         src="~/images/static/bank-currencies/@(currency.ShortName).svg"
                         loading="lazy"
                         alt="@currency.ShortName"
                         style="min-width: 2.5rem !important;">
                </div>
                <div class="media-body">
                    <h6 class="mb-0">
                        @currency.ShortName
                    </h6>
                </div>
            </div>
        </div>
    }
</div>