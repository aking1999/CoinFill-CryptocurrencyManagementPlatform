@model string
@using CoinFill.Helpers.Extensions

@{
    ViewData.SetTitle("Email confirmation");
    ViewData.SetMetaDescription("Confirm the email to unlock all the possibilities that CoinFill provides.");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section StyleSheets {
    <link rel="stylesheet" href="~/css/btn-send-paper-plane.css" />
}

<div class="row justify-content-center text-center">
    <div class="col-sm-10 col-md-8 col-lg-6">
        <h1 class="mb-3 text-primary">CoinFill</h1>
        <div class="card">
            @Html.AntiForgeryToken()
            <div class="card-body overflow-hidden p-4 p-sm-5">
                <img class="d-block mx-auto mb-4 avatar-4xl" src="~/images/static/assets/mailbox.png" alt="mailbox" />
                <h4 class="mb-3 text-primary">Email confirmation required</h4>
                <p>Please click the button below to send a confirmation link to your email at <strong>@Model</strong>.</p>
                <center class="mb-3">
                    <button class="button">
                        <span class="default">Send</span>
                        <span class="success text-secondary"><i class="fas fa-check text-success mr-2 no-tick"></i>Sent</span>
                        <div class="left"></div>
                        <div class="right"></div>
                    </button>
                </center>
                <small>
                    <i class="far fa-info-circle text-info mr-2"></i>After clicking the "Send" button, open the email we have sent you and click on the link in it.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/gsap.min.js"></script>
    <script>
        var sendEmailConfirmationLinkUrl = '@Url.Action("SendEmailConfirmationLink", "Authorization")';
    </script>
    <script src="~/js/send-email-confirmation-link.js"></script>
}