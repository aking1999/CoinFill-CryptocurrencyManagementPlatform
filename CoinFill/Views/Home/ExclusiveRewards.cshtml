@section StyleSheets {
    <style>
        :root {
            --transition: 0.25s;
            --spark: 1.8s;
        }

        .svg-spark {
            width: 1.2rem;
            height: 1.5rem;
            overflow: hidden !important;
            visibility: visible;
        }

        a:hover .sparkle-spark {
            visibility: visible;
        }

        .sparkle-spark path {
            color: hsl(0 0% calc((var(--active, 0) * 70%) + var(--base)));
            transform-box: fill-box;
            transform-origin: center;
            fill: #6b22fc;
            stroke: #6b22fc;
            animation-delay: calc((var(--transition) * 1.5) + (var(--delay) * 1s));
            animation-duration: 0.7s;
            animation-iteration-count: infinite;
            transition: color var(--transition);
            animation-name: bounce-spark;
        }

        @@keyframes bounce-spark {
            35%, 65% {
                scale: var(--scale);
            }
        }

        .sparkle-spark path:nth-of-type(1) {
            --scale: 0.5;
            --delay: 0.1;
            --base: 40%;
        }

        .sparkle-spark path:nth-of-type(2) {
            --scale: 1.5;
            --delay: 0.2;
            --base: 20%;
        }

        .sparkle-spark path:nth-of-type(3) {
            --scale: 2.5;
            --delay: 0.35;
            --base: 30%;
        }

        .hover-transition {
            -webkit-transition: color 1s;
            -moz-transition: color 1s;
            -ms-transition: color 1s;
            -o-transition: color 1s;
            transition: color 1s;
        }

            .hover-transition:hover {
                border: 1px solid #6b22fc;
            }
    </style>
}

